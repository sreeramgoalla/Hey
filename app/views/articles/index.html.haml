%body
  .row
    .col-md-12.text-center
      %br/
      %h3 Listing all you reviews #{current_user.first_name}
      %br/
  .row
    .col-md-12
      %table.table.table-striped
        %thead
          %tr
            %th.text-left Film Title
            %th.text-left Review
            %th.text-left Created on
            %th.text-left Updated on
            %th{:colspan => "2"}
              Actions
        %tbody
          - @articles.each do |article|
            %tr
              %td.text-left
                = article.article_title
              %td.text-left
                = article.article_text
              %td.text-left
                = sydney_time_zone(article.created_at)
              %td.text-left
                = sydney_time_zone(article.updated_at)
              %td
                = link_to 'View', article_path(article), class: 'btn btn-sm btn-primary'
                = link_to 'Edit', edit_article_path(article), class: 'btn btn-sm btn-warning'
                = link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'
  %br
  .row
    .col-md-12.text-center
      = link_to 'New Review', new_article_path, class: 'btn btn-bg btn-success'
      = link_to 'Home', welcome_hey_path, class: 'btn btn-bg btn-warning'
