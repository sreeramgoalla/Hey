.registration-form
  .row
    .col-md-12
      .heading.text-center.text-uppercase
        %h3 View Profile
        %br
        %br
  .row
    .col-md-4
      - if current_user.avatar?
        = image_tag(current_user.avatar_url.to_s, class: 'img-responsive center-block img-rounded')
      - else
        Profile Picture not found !
        %br
        %br
        To upload a profile picture please click on the "Edit Profile" button.
    .col-md-8
      .row
        .col-md-6
          .heading.text-left
            User Name:
        .col-md-6
          .heading.text-left
            #{current_user.first_name} #{current_user.last_name}
      .row
        .col-md-6
          .heading.text-left
            Date of Birth:
        .col-md-6
          .heading.text-left
            #{current_user.date_of_birth}
      .row
        .col-md-6
          .heading.text-left
            Email:
        .col-md-6
          .heading.text-left
            #{current_user.email}
  .form-actions.text-center.extramargin
    = link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-warning'
    = link_to 'Cancel', :back ,class: 'btn btn-danger'
