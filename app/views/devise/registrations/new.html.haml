.registration-form
  .col-md-12
    .heading.text-center.text-uppercase
      %h3 Create Account
      %p It's free and always will be
    .row
      .col-md-12
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .form-inputs
            .row
              .col-md-6
                = f.input :first_name, label: 'First Name', required: true, autofocus: true, placeholder: 'First Name'
              .col-md-6
                = f.input :last_name, label: 'Last Name', required: true, placeholder: 'Last Name'
            .row
              .col-md-6
                = f.input :date_of_birth, label: 'Date of Birth', required: true
              .col-md-6
                = f.input :email, label: 'Email', required: true, placeholder: 'Email Address'
            .row
              .col-md-6
                = f.input :password, label: 'Password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), placeholder: 'New Password'
              .col-md-6
                = f.input :password_confirmation, label: 'Confirm Password', required: true, placeholder: 'Confirm Password'
            .row
              .col-md-12
                = f.input :avatar, label: 'Upload Profile Picture'
          .form-actions.text-center.extramargin
            = f.button :submit, 'Create Account', class: 'btn btn-success'
            = link_to 'Cancel', :back ,class: 'btn btn-danger'
